<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mountainthree"
    tools:context=".MountainInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textInfo"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:gravity="center"
            android:text="Info"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnClimateAction"
            android:layout_width="200dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:drawableBottom="@drawable/ic_ecology2"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="#70FFFFFF"
            app:elevation="0dp"
            app:iconPadding="0dp" />

        <Button
            android:id="@+id/btnUN"
            android:layout_width="200dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:drawableBottom="@drawable/ic_naciones_unidas"
            android:fadingEdge="none"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="#74FFFFFF"
            app:elevation="0dp"
            app:iconPadding="0dp" />

        <Button
            android:id="@+id/btnOurPlanet"
            android:layout_width="200dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#75FFFFFF"
            android:drawableBottom="@drawable/ic_planeta_tierra"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="#75FFFFFF"
            app:elevation="0dp"
            app:iconPadding="0dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>